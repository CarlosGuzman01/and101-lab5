<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ivPetImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/cat_and_dog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias= "0.2"
       />

    <Button
        android:id="@+id/btnRandomPet"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/ivPetImage"
        app:layout_constraintLeft_toLeftOf="@id/ivPetImage"
        app:layout_constraintRight_toRightOf="@id/ivPetImage"
        app:cornerRadius = "8dp"
        android:text="GET A RANDOM PET!"/>



</androidx.constraintlayout.widget.ConstraintLayout>